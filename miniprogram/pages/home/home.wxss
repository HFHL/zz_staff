.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.weigh-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  border-radius: 44rpx;
  margin: 30rpx auto;
}

.weigh-btn:active {
  transform: scale(0.98);
}

.device-list {
  width: 100%;
  margin-top: 30rpx;
}

.device-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.device-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.device-id {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.device-rssi {
  font-size: 24rpx;
  color: #999;
}

.search-status {
  text-align: center;
  color: #666;
  font-size: 28rpx;
  margin-top: 30rpx;
}