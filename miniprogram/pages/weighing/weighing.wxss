.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f7f7f7;
}

/* 主内容区域 */
.main-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
  padding-top: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #333;
}

/* 设备列表样式 */
.device-item {
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
}

.device-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.device-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.device-id {
  font-size: 24rpx;
  color: #999;
}

.device-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.weight {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.battery {
  font-size: 24rpx;
  color: #666;
}

.status {
  font-size: 24rpx;
  color: #999;
}

.status.connected {
  color: #07c160;
}

.device-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.category-picker {
  min-width: 160rpx;
  background: #f8f8f8;
  padding: 4rpx 20rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  flex: 1;
  margin-left: 20rpx;
}

.picker {
  display: flex;
  align-items: center;
  color: #666;
}

.picker-arrow {
  margin-left: 8rpx;
  font-size: 20rpx;
  color: #999;
  color: #999;
  font-size: 24rpx;
}

/* 品类标签样式 */
.category-tag {
  font-size: 24rpx;
  padding: 2rpx 12rpx;
  background: #e8f5e9;
  color: #4caf50;
  border-radius: 4rpx;
  margin-left: 16rpx;
}

/* 底部控制栏 */
.footer {
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.printer-controls {
  margin-bottom: 20rpx;
}

.printer-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-text {
  font-size: 28rpx;
  color: #333;
}

.divider {
  height: 1rpx;
  background: #eee;
  margin: 20rpx 0;
}

.weight-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-weight {
  display: flex;
  align-items: center;
}

.weight-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.weight-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

/* 按钮样式 */
.control-btn {
  min-width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 35rpx;
  font-size: 28rpx;
  margin: 0;
  padding: 0 30rpx;
}

.printer-btn {
  background: #f0f0f0;
  color: #333;
}

.print-btn {
  background: #07c160;
  color: #fff;
}

.refresh-btn {
  background: #1989fa;
  color: #fff;
}

.profile-btn {
  background: #ff9500;
  color: #fff;
}

/* 适配 iPhone X 等机型 */
@supports (padding-bottom: env(safe-area-inset-bottom)) {
  .footer {
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  }
}

/* 品类选择器样式 */
.category-section {
  padding: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.picker-content {
  padding: 15rpx 30rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333;
  font-size: 28rpx;
}

/* 选择器区域样式 */
.selectors-section {
  padding: 20rpx;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.selector-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.selector-item:first-child {
  margin-bottom: 10rpx;
}

.picker {
  flex: 1;
  margin-left: 20rpx;
}

.picker-content {
  padding: 15rpx 30rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333;
  font-size: 28rpx;
}

/* 设备类别标签 */
.device-category {
  font-size: 24rpx;
  color: #07c160;
  background: #e8f5e9;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-left: 12rpx;
}

.total-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.info-item {
  display: flex;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.value.amount {
  color: #f5222d;
}

/* 底部控制栏新样式 */
.bottom-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.total-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
  white-space: nowrap;
}

.value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
}

.value.amount {
  color: #f5222d;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  width: 100%;
}

.control-btn {
  margin: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 32rpx;
}

.print-btn {
  background: #07c160;
  color: #fff;
}

.refresh-btn {
  background: #1989fa;
  color: #fff;
}

/* 操作菜单样式 */
.action-sheet {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.action-sheet-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.action-sheet-header {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.action-item {
  text-align: center;
  font-size: 32rpx;
  color: #333;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.action-item.delete {
  color: #ff4d4f;
}

.action-item.cancel {
  color: #999;
  margin-top: 16rpx;
  border-bottom: none;
}