<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="title">渣点员工</view>
    
    <view class="login-box">
      <input class="phone-input" 
             type="number" 
             maxlength="11" 
             placeholder="请输入手机号" 
             bindinput="onPhoneInput"
             value="{{phone}}" />
      
      <button class="login-btn" 
              bindtap="handleLogin"
              loading="{{loading}}">
        登录
      </button>
    </view>
  </view>
</scroll-view>
