/**index.wxss**/
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  text-align: center;
  padding: 40rpx 0;
}

.welcome {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.user-info {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.button-group {
  margin-top: 40rpx;
  padding: 0 40rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #1890ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 30rpx;
}

.btn:active {
  opacity: 0.8;
}

.title {
  font-size: 48rpx;
  color: #07c160;
  font-weight: bold;
  margin-bottom: 80rpx;
}

.login-box {
  width: 85%;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.phone-input {
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 44rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
  font-size: 32rpx;
}

.login-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.login-btn:active {
  opacity: 0.8;
}

.wechat-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #ffffff;
  color: #07c160;
  border: 2rpx solid #07c160;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.tips {
  font-size: 24rpx;
  color: #999;
  margin-top: 30rpx;
  text-align: center;
}
