.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.header {
  padding: 30rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.scan-status {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  padding: 6rpx 20rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  display: inline-block;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.device-list {
  padding: 20rpx 0;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #f5f5f5;
}

.device-item:last-child {
  border-bottom: none;
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.device-id {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.device-rssi {
  font-size: 24rpx;
  color: #666;
}

.device-connect {
  padding: 10rpx 30rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.device-connect.connected {
  background: #52c41a;
}

.no-devices {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}
